  /*部门容器：封装图片 + 文字内容 + 管理按钮*/
.department {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 576rpx;
    height: 164rpx;
    margin:20rpx 0rpx 20rpx 0rpx;
}

/*部门图片*/
.avatar {
    width: 130rpx;
    height: 130rpx;
}

/*分割电路样式*/
.split {
    width: 665rpx;
    height: 54rpx;
    margin:10rpx 0rpx 10rpx 0rpx;
}

/*左对齐分割*/
.left {
    position: relative;
    left:-63rpx;
}

/*右对齐分割*/
.right {
    transform: scaleX(-1); /* 水平翻转 */
    position: relative;
    left:63rpx;
}

/*部门介绍文字容器*/
.text-box {
    display: flex;
    flex-direction: column;
    width: 199rpx;
}

  /*部门名称文字样式渲染*/
.name {
    font-size:63rpx;
    font-weight: 600;
    text-shadow: #00ADB5 -6rpx 0rpx;
}

/*部门职能描述文字样式渲染*/
.duty {
    font-size: 24rpx;
    color: #393E46;
}

  /*部门工作按钮渲染*/
.department button {
    background-color: #222831;
    color:#00ADB5;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 28rpx;
    font-weight: 600;
    text-align: center;
    height: 84rpx;
    width:174rpx;
    border-radius: 42rpx;
    padding:0rpx 10rpx 0rpx 10rpx;
    margin:0rpx;
}

