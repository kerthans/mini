/*1.74418605rpx = 1px*/

/*全局样式渲染*/
/*页面设置*/
page {
    background-color: #222831;
  }

.container{
  overflow-x: hidden ;
  padding: 0;
  padding-top:25rpx;
}


/*标题样式渲染*/
.title {
    /* position: relative; */
    font-size: 42rpx;
    font-weight: 600;
    text-align: center;
    color:#00ADB5;
}

button:active {
    opacity: 0.8;
}

/*常用功能容器：“常用功能” + 四个按钮*/
.common-function {
    /* position: absolute; */
    /* margin-top: 27rpx; */
    /* top:30rpx; */
    width:100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
    flex:1;
}

/*四个按钮封装容器*/
.buttons {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-left: 40rpx;
    margin-right: 40rpx;
}

/*四个按钮样式渲染*/
.buttons button {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    margin:21rpx 0rpx 0rpx 0rpx;
    height: 140rpx;
    width: 140rpx;
    background-color:#00ADB5;
    color:white;
    font-size: 26rpx;
    font-weight: 400;
    padding:17rpx 18rpx 24.4rpx 18rpx;
    border-radius: 35rpx;
}

/*按钮图标*/
.icon {
    display: inline-block;  /* 使其成为块级元素，便于设置尺寸 */
    width: 63rpx;
    height: 63rpx;  /* 设置一个合适的高度 */
    position: relative;
}

.clean {
    width: 57rpx;
    height: 57rpx;
}

.remote {
    width: 57rpx;
    height: 57rpx;
}

.apply-duty {
    width: 68rpx;
    height: 68rpx;
}

/*部门工作容器*/
.work {
    /* position: absolute; */
    display: flex;
    flex-direction: column;
    align-items:center;
    justify-content: flex-end;
    top:240rpx;
    width: 750rpx;
    height: 1215rpx;
    flex:2;
}

/*特殊修饰部门工作的标题（位置设置变化）*/
.work .title {
    position: relative;
    top:50rpx;
}

