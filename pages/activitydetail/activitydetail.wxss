/* container布局 */
.container {
  position: relative;
  background: #fff;
  padding: 0 !important;
}

/* 海报容器 */
.postercontainer {
  position: relative;
  height: 507.5rpx;
  width: 100%;
  overflow: hidden;
}

.poster{
  width: 100%;
  height: 100%;
}

/* 右上角状态标签 */
.box {
  position: absolute;
  top: 0rpx; 
  right: 0rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 0rpx 0rpx 0rpx 35rpx;
  background: rgba(0, 173, 181, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9;
}
.boxtext {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 45rpx;
  color: rgba(255, 255, 255, 1);
}

/* 猫头背景容器 */
.catheadcontainer {
  display: flex;
  flex-direction: column;
  position: relative;
  margin-top: -128rpx; /* 覆盖海报 */
  padding: 40rpx 30rpx;
  min-height: 1150rpx; /* 确保容器高度 */
  width: 100%;
  z-index: 1;
}

/* 背景图片容器 */
.background-image {
  position: absolute;
  align-self: flex-start;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 置于底层 */
}

/* 活动标题 */
.activity-title {
  display: block;
  text-align: center;
  font-size: 41rpx;
  color: #222831;
  font-weight: bold;
  margin: 80rpx 0 0 0;
  z-index: 99;
}

/* 信息行布局 */
.center {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}
.infos text {
  font-size: 30rpx;
  color: #666;
}

/* 内容区块通用样式 */
.section {
  margin: 30rpx 0;
}

/* 标题带竖线效果 */
.sub-title {
  position: relative;
  padding-left: 20rpx;
  font-size: 35rpx;
  color: #222831;
  font-weight: 500;
  line-height: 1.4;
}
.sub-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4rpx;
  bottom: 4rpx;
  width: 6rpx;
  background: #00ADB5;
  border-radius: 4rpx;
}

/* 信息内容样式 */
.info {
  margin-top: 10rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #444;
  line-height: 1.6;
  position: relative;
}

/* 复制图标 */
.copy-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  margin-left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 底部装饰图 */
.bottom-image {
  width: 440.53rpx;
  height: 174.4rpx;
  position: absolute;    
  bottom: 0rpx;       
  z-index: 99;
}
