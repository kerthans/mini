  color: white; /* 文字颜色 */
  border-radius: 43.5rpx; /* 圆角 */
  display: flex; /* 使用 Flexbox 布局 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  text-align: center; /* 确保文本内容水平居中 */
  font-size: 31.92rpx; /* 字体大小 */
