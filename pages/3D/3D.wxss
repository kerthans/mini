}

/* 底部图片样式 */
.bottom-image {
  position: absolute; /* 固定位置 */
  transform: translateX(-50%); /* 精确水平居中 */
  width: 440.5rpx; /* 图片宽度 */
  height: 174rpx; /* 图片高度 */
  bottom: 0; /* 底部对齐 */
  left: 50%; /* 水平居中 */
}