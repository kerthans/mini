<!-- 页面整体容器，使用了名为 container 的类，该类在 CSS 中定义了整体布局样式 -->
<view class="container1">
  <!-- 内容区域，使用了名为 content 的类，该类在 CSS 中定义了内容区域的布局和对齐方式 -->
  <view class="content">
    <!-- 背景图片，使用了名为 background 的类，设置图片的路径和替代文本 -->
    <image class="background" src="/images/register/login_register_background.png" alt="{{image1.alt_text}}"></image>
    <!-- 显示 "SCU Makers" 文字，使用了名为 SCU 的类，该类在 CSS 中定义了文字的样式 -->
    <view class="SCU">SCU Makers</view>
    <!-- 对话框图片，使用了名为 dial 的类，设置图片的缩放模式和宽高 -->
    <image class="dial" src="/images/register/register_dial.png" mode="scaleToFill" style="width: 80vw; height: 70vh;"></image>
    <!-- 注册内容区域，使用了名为 register-content 的类，该类在 CSS 中定义了注册内容的布局 -->
    <view class="register-content">
      <!-- 注册标题，使用了名为 register-title 的类，该类在 CSS 中定义了标题的样式 -->
      <view class="register-title">注册 SCU Makers 小程序</view>
      <!-- 表单，用于用户输入注册信息 -->
      <form>
        <!-- 邮箱输入项，使用了名为 form-item 的类，该类在 CSS 中定义了表单项的样式 -->
        <view class="form-item">
          <!-- 邮箱标签 -->
          <label>邮箱</label>
          <!-- 邮箱输入框，根据 isFocused1 的值添加或移除 focused 类，用于改变输入框的样式 -->
          <input class="preinput {{isFocused1 ? 'focused' : ''}}" type="text" placeholder="你的邮箱" value="{{email}}" bindfocus="handleFocus1" bindinput="handleEmailInput" bindblur="handleBlur1"/>
        </view>
        <!-- 验证码输入项 -->
        <view class="form-item">
          <!-- 验证码标签 -->
          <label>验证码</label>
          <!-- 验证码输入框和获取验证码按钮的容器，使用了名为 input-container1 的类 -->
          <view class="input-container1">
            <!-- 验证码输入框，根据 isFocused2 的值添加或移除 focused 类 -->
            <input class="preinput {{isFocused2 ? 'focused' : ''}}" type="text" placeholder="验证码" value="{{verifyCode}}" bindinput="handleVerifyCodeInput" bindfocus="handleFocus2" bindblur="handleBlur2"/>
            <!-- 获取验证码按钮，使用了名为 code 的类，点击时触发 getVerifyCode 事件 -->
            <button class="code" style="display: flex; justify-content: center; align-items: center;width: auto; " bindtap="getVerifyCode">获取验证码</button>
          </view>
        </view>
        <!-- 密码输入项，点击该区域时触发 handleContainerClick 事件 -->
        <view class="form-item" bindtap="handleContainerClick">
          <!-- 密码标签 -->
          <label>密码</label>
          <!-- 密码输入框和密码可见性切换图标的容器，使用了名为 input-container2 的类 -->
          <view class="input-container2">
            <!-- 密码输入框，根据 isPasswordVisible1 的值决定输入框类型是文本还是密码，根据 isFocused3 的值添加或移除 focused 类 -->
            <input
              class="preinput {{isFocused3 ? 'focused' : ''}}"
              type="{{isPasswordVisible1 ? 'text' : 'password'}}"
              placeholder="密码"
              value="{{password}}"
              bindinput="handlePasswordInput"
              bindfocus="handleFocus3"
              bindblur="handleBlur3"
              focus="{{isFocus1}}"
            />
            <!-- 密码可见性切换图标，根据 isPasswordVisible1 的值显示不同的图标，点击时触发 togglePasswordVisibility1 事件 -->
            <image
              src="{{isPasswordVisible1 ? 'data:image/svg+xml;base64,' : 'data:image/svg+xml;base64,'}}"
              catchtap="togglePasswordVisibility1"
              data-visible="{{isPasswordVisible1}}"
              class="password-toggle-icon"
            />
          </view>
        </view>
        <!-- 确认密码输入项，点击该区域时触发 handleContainerClick 事件 -->
        <view class="form-item" bindtap="handleContainerClick">
          <!-- 确认密码标签 -->
          <label>确认密码</label>
          <!-- 确认密码输入框和密码可见性切换图标的容器，使用了名为 input-container3 的类 -->
          <view class="input-container3">
            <!-- 确认密码输入框，根据 isPasswordVisible2 的值决定输入框类型是文本还是密码，根据 isFocused4 的值添加或移除 focused 类 -->
            <input
              class="preinput {{isFocused4 ? 'focused' : ''}}"
              type="{{isPasswordVisible2 ? 'text' : 'password'}}"
              placeholder="确认密码"
              value="{{confirmPassword}}"
              bindinput="handleConfirmPasswordInput"
              bindfocus="handleFocus4"
              bindblur="handleBlur4"
              focus="{{isFocus2}}"
            />
            <!-- 密码可见性切换图标，根据 isPasswordVisible2 的值显示不同的图标，点击时触发 togglePasswordVisibility2 事件 -->
            <image
              src="{{isPasswordVisible2 ? 'data:image/svg+xml;base64,' : 'data:image/svg+xml;base64,'}}"
              catchtap="togglePasswordVisibility2"
              data-visible="{{isPasswordVisible2}}"
              class="password-toggle-icon"
            />
          </view>
        </view>
        <!-- 注册按钮和箭头图标的容器 -->
        <view class="button1">
          <!-- 注册按钮，使用了名为 button 的类，点击时触发 handleRegister 事件 -->
          <button class="button" style="width: 70vw;"bindtap="handleRegister">注  册</button>
          <!-- 箭头图标，使用了名为 arrow 的类，设置图片的路径 -->
          <image class="arrow" src="/images/register/icn_general_arrow_go_white.png"></image>
        </view>
        <!-- 返回登录界面的链接，使用了名为 login-link 的类，点击时触发 navigateToRegister 事件 -->
        <text class="login-link" bindtap="navigateToRegister">返回登录界面</text>
      </form>
    </view>
  </view>
</view>