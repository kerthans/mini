page{
  background-color: #222831;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  color: #FFFFFF;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  overflow-x:hidden;	
}

.nav {
  height:0;
}

.user-info {
  display: flex;
  flex-direction: row;
  height: 0vh;
}

.user-name {
  font-size: 42rpx;
  font-weight: bold;
  margin-left: 23rpx;
}

.box1, .box2 {
  display: flex;
  padding: 4rpx;
  margin-top: 30rpx;
  border-radius: 25rpx;
  width: 47%;
}

.phone-icon, .style-icon {
  width: 30rpx;
  height: 30rpx;
  padding-right:-15rpx;
}

.phone-number, .signiture {
  flex-grow: 1;
  font-size: 1rem;
  color: #333;
}

.copy-icon1, .copy-icon2 {
  width: 33rpx;
  height: 33rpx;
  margin-right:-45rpx;
}
/* 用户头像样式 */
.avatar {
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top:-190rpx;
  margin-left:410rpx;
}

/* 头像内图片样式 */
.avatar image {
  width: 100%;
  height: 100%;
}

.info-boxes {
  display: flex;
  flex-direction: column; /* 让 box1 和 box2 垂直排列 */
}

.membership {
  display: flex;
  flex-direction:row;
  align-items: center;
  width:100%;
  height: 250rpx;
}

.membership-label{
  font-size: 63rpx;
  font-weight: bold;
  margin-left:100rpx;
  height: 157rpx;
}

.separate {
  width:81rpx;
  height:173rpx;
  margin-left:120rpx;
}

.score {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 157rpx;
  height: 153.5rpx;
  margin-left: 75rpx;
}

.score-label {
  font-size: 42rpx;
  color: #FFE89E;
  text-align: center;
  font-weight: bold;
  width: 157rpx;
  height: 92.5rpx;
}

.score-value {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  gap:20rpx;
  width:100%;
  height:120rpx;
  border-radius: 25rpx;
  padding:20rpx;
}

/* 积分数字样式 */
.score-number {
  font-size: 42rpx;
  color:white;
  font-weight: 400;
}

/* 白色箭头图标样式 */
.arrow-icon-white{
  width:42rpx;
  height:52rpx;
}

/* 功能列表容器样式 */
.function-list-container {
  flex: 1;
  width: 100%;
  top: 40%;
  margin-top: 0rpx;
  bottom: 120rpx;
  z-index:2;
}

/* 猫猫头背景 */
.background-image {
  position: absolute;
  width: 750rpx;
  height: 1060rpx;
  z-index: -1; /* 确保内容在上层 */
  border-radius: 20rpx; /* 与容器相同圆角 */
}

/* 功能列表样式 */
.function-list {
  margin-top: 130rpx;
}

/* 功能列表的每一项的样式 */
.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 8rpx;
  font-size: 40rpx;
  color: #000000;
  border-radius: 15rpx;
  margin-bottom: 47rpx;
  font-weight: bold;
  height: 97rpx;
  width: 587rpx;
  padding-left: 36rpx;
  margin-left: 80rpx;
}

/* 箭头图标样式 */
.arrow-icon {
  width: 50rpx;
  height: 42rpx;
  margin-left: -55rpx;
}

/* 底部导航栏 */
.bottom-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #222831;
  padding: 70rpx 120rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  height:52rpx;
  z-index: 999;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  justify-content:center;
}

/* 定位圆容器 */
.circle {
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  transform: translateX(-48%); /* 使元素完全居中 */
  width: 165.69rpx; /* 圆圈的直径 */
  height: 165.69rpx; /* 圆圈的直径 */
  background-color: #222831; /* 黑色背景 */
  border-radius: 50%; /* 圆形 */
}
/* 绿圆（可见，svg猫的背景） */
.green-circle {
  width: 131rpx; /* 绿色圆圈的宽度，可根据需求调整 */
  height: 131rpx; /* 绿色圆圈的高度，可根据需求调整 */
  background-color:#00ADB5; /* 绿色背景 */
  border-radius: 50%; /* 圆形 */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -53%); /* 使其在黑色圆圈内居中 */
  display:flex;
  justify-content:center;
  align-items:center;
}
/* svg猫 */
.icon-on-green-circle{
  width: 82rpx;
  height: 59rpx;
}

/* 社区和我的的图片 */
.community-icon{
  width: 80rpx;                  
  height: 80rpx;
  margin-top:-1.744rpx;
  margin-bottom:-5.232rpx;
}
.me-icon{
  width: 80rpx;                 
  height: 80rpx;
}
/* 社区和我的的文字 */
.bottom-nav text{
  font-size: 30rpx;
}