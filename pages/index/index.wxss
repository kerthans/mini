/**index.wxss**/
/* 头部透明的模板 */
button:active {
  opacity: 0.8;
}

.nav {
  height: 0;
}

/* index.wxss */
.page-container {
  padding-top: 0 !important; /* 清除默认间距 */
  position: relative;
  height: 100vh;
  overflow: hidden; 
  touch-action: none; /* 禁用触摸滚动 */
}

/* 消息图标 */
.message-icon-container {
  position: absolute;
  margin-top: 105rpx;
  left: 30rpx;
  z-index: 999;
}

/* 信息按钮的图片 */
.message-icon {
  width: 53.42rpx;
  height: 53.42rpx;
}

/* 轮播图 */
.carousel {
  height: 40vh;
  margin: 0 -20rpx; /* 负边距突破圆角限制 */
  width: calc(100% + 40rpx); /* 补偿负边距 */
  overflow: visible; /* 允许内容溢出 */
  top:0;
  z-index: -1;
}

/* 轮播图图片 */
.carousel-image {
  width: 100%;
  height: 100%;
  transform: scale(1.05); /* 轻微放大补偿圆角 */
  border-radius: 0; /* 清除默认圆角 */
}

/* 添加安全区域适配 */
.carousel::after {
  content: '';
  position: absolute;
  top: 0;
  left: 10rpx;
  right: 10rpx;
  height: 30vh;
  pointer-events: none; /* 确保可点击 */
  /* box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1); 视觉边界方便调试 */
}

/* 背景容器 */
.content-container {
  position: absolute;
  width: 100%;
  top: 40%;
  margin-top: -15%;
  bottom: 120rpx;
  z-index: 2;
}

/* 当宽高比超过2:1时启用滚动 */
@media (min-aspect-ratio: 1/2) { 
  .page-container {
    overflow-y: auto; /* 启用纵向滚动 */
    -webkit-overflow-scrolling: touch; /* iOS平滑滚动 */
    max-height: 70vh; /* 控制最大高度 */
  }
}

/* 猫猫头背景 */
.background-image {
  position: absolute;
  width: 750rpx;
  height: 925rpx;
  z-index: -1; /* 确保内容在上层 */
  border-radius: 20rpx; /* 与容器相同圆角 */
}

/* 公告栏 */
.announcement-box {
  background: rgba(0, 0, 0, 0);
  border-radius: 16rpx;
  padding-left: 90rpx;
  padding-right: 60rpx;
  margin-top: 210rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.notice-icon {
  width: 44rpx;
  height: 46rpx;
  margin-right: 20rpx;
}

.announcement-text {
  font-size: 28rpx;
  color: #666;
}

/* 功能按钮 */
.button-grid {
  display: flex;
  flex-direction: column;
  width: 85%;
  margin:auto;
  gap:20rpx;
}

.button-row {
  display: flex;
  justify-content: space-between;
}

.func-button {
  width: 33.3%;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background:rgba(0, 0, 0, 0);
  border-radius: 16rpx;
  padding: 20rpx;
  line-height: 1.4;
  gap:15rpx;
}

.func-button text{
  font-size: 32rpx;
  font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-weight: 500;
  color:#808080;
}

/* 功能按钮的图片 */
.button-icon {
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 10rpx;
}



/* 底部导航栏 */
.bottom-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #222831;
  padding: 70rpx 120rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  height:52rpx;
  z-index: 999;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  justify-content:center;
}

/* 定位圆容器 */
.circle {
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  transform: translateX(-48%); /* 使元素完全居中 */
  width: 165.69rpx; /* 圆圈的直径 */
  height: 165.69rpx; /* 圆圈的直径 */
  background-color: #222831; /* 黑色背景 */
  border-radius: 50%; /* 圆形 */
}
/* 绿圆（可见，svg猫的背景） */
.green-circle {
  width: 131rpx; /* 绿色圆圈的宽度，可根据需求调整 */
  height: 131rpx; /* 绿色圆圈的高度，可根据需求调整 */
  background-color:#00ADB5; /* 绿色背景 */
  border-radius: 50%; /* 圆形 */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -53%); /* 使其在黑色圆圈内居中 */
  display:flex;
  justify-content:center;
  align-items:center;
}
/* svg猫 */
.icon-on-green-circle{
  width: 82rpx;
  height: 59rpx;
}

