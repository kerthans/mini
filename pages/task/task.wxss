/* pages/task/task.wxss */
/* 基础容器样式 */
.container {
  background-color: #222831;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.focused{
  /* border-color: #00ADB5; */
  box-shadow:0 0 5px rgba(0, 107, 255, 0.7);
}

/* 表单容器 */
.form-container {
  background: #00adb5;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  width: 95%;
}

/* 统一输入框样式 */
.input-field {
  height: 90rpx;
  background: #e5e5e5;
  border-radius: 35rpx;
  font-size: 28rpx;
  padding: 0 28rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s;
}

/* .input-field:focus {
  border-color: #222831;
} */

picker:active {
  background-color: rgba(0, 173, 181, 0.2);
}

/* 文本域样式 */
.textarea-field {
  height: 200rpx;
  padding: 20rpx 28rpx;
  line-height: 1.5;
  width: 100%;
  box-sizing: border-box; /* 新增 */
}

/* 选择器组布局 */
.time-picker-group {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin: 40rpx 0;
  color:#7D8592;
}

.time-picker-group picker {
  margin: 10rpx;
  background: #e5e5e5;
  border-radius: 24rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 统一选择器样式 */
.time-picker {
  background: #e5e5e5;
  border-radius: 25rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #7d8592;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

/* .time-picker.active {
  background: #d5d5d5;
} */

/* 特殊定位选择器 */
.year-picker {
  grid-column: span 2;
}

.hour-picker,
.minute-picker {
  grid-column: span 1;
}

/* 标签文本样式 */
.form-label {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 20rpx;
  display: block;
}

/* 提交按钮样式 */
.submit-btn {
  background: #00adb5;
  color: white;
  border-radius: 45rpx;
  height: 90rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
  line-height: 60rpx;
  font-weight: 400;
}

.submit-btn:active {
  transform: scale(0.98);
  filter:brightness(0.95);
}

/* 装饰图片样式 */
.decorative-image {
  width: 440rpx;
  height: 174rpx;
  display: block;
  position: relative;
  bottom: 0;
  margin-top: 50rpx;
  z-index: 99;
}
