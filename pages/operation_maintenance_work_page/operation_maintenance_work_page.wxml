<!--pages/operation_maintenance_work_page/operation_maintenance_work_page.wxml-->


<view class="container">
  <navBar title='运维部' background='rgba(0,0,0,0)' color='#fff' back="{{true}}" home="{{true}}" iconTheme='white' bindback="handlerGobackClick" bindhome="handlerGohomeClick"></navBar>
  <!-- 第1个容器：监控管理 -->
  <view class="button-container btn1" bindtap="navigate1" wx:if="{{level >= 1}}">
    <view class="left-image-container">
      <image class="left-image" src="/images/operation_maintenance_work_page/1.svg"  mode="aspectFit"></image>
    </view>
    <view class="text-container text1">监控管理</view>
    <view class="arrow-container">
      <image class="arrow-image" src="/images/operation_maintenance_work_page/icon_arrow_chevron-right_black.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 第2个容器：网络管理 -->
  <view class="button-container btn2" bindtap="navigate2" wx:if="{{level >= 1}}">
    <view class="left-image-container">
      <image class="left-image" src="/images/operation_maintenance_work_page/2.svg" mode="aspectFit"></image>
    </view>
    <view class="text-container text2">网络管理</view>
    <view class="arrow-container">
      <image class="arrow-image" src="/images/operation_maintenance_work_page/icon_arrow_chevron-right_white.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 第3个容器：3D打印审核 -->
  <view class="button-container btn3" bindtap="navigate3" wx:if="{{level >= 2}}">
    <view class="left-image-container">
      <image class="left-image" src="/images/operation_maintenance_work_page/3.svg" mode="aspectFit"></image>
    </view>
    <view class="text-container text3">3D打印审核</view>
    <view class="arrow-container">
      <image class="arrow-image" src="/images/operation_maintenance_work_page/icon_arrow_chevron-right_black.svg" mode="aspectFit"></image>
    </view>
  </view>

</view>

<!-- 在container外添加底部图片容器 -->
<view class="bottom-image-container">
  <image class="bottom-image" src="/images/pubulicity_work_page/cat.svg" mode="widthFix"></image>
</view>