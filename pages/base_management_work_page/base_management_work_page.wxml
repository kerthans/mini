<!--pages/base_management_work_page/base_management_work_page.wxml-->

<view class="container">
  <navBar title='基管部' background='rgba(0,0,0,0)' color='#fff' back="{{true}}" home="{{true}}" iconTheme='white' bindback="handlerGobackClick" bindhome="handlerGohomeClick"></navBar>
  <!-- 第1个容器：值班安排 -->
  <view class="button-container btn1" bindtap="navigate1" wx:if="{{level >= 2}}">
    <view class="left-image-container">
      <image class="left-image" src="/images/base_management_work_page/1.svg"  mode="aspectFit"></image>
    </view>
    <view class="text-container text1">值班安排</view>
    <view class="arrow-container">
      <image class="arrow-image" src="/images/base_management_work_page/icon_arrow_chevron-right_black.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 第2个容器：大扫除通知 -->
  <view class="button-container btn2" bindtap="navigate2" wx:if="{{level >= 2}}">
    <view class="left-image-container">
      <image class="left-image" src="/images/base_management_work_page/2.svg" mode="aspectFit"></image>
    </view>
    <view class="text-container text2">大扫除通知</view>
    <view class="arrow-container">
      <image class="arrow-image" src="/images/base_management_work_page/icon_arrow_chevron-right_white.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 第3个容器：借物申请审核 -->
  <view class="button-container btn3" bindtap="navigate3" wx:if="{{level >= 1}}">
    <view class="left-image-container">
      <image class="left-image" src="/images/base_management_work_page/3.svg" mode="aspectFit"></image>
    </view>
    <view class="text-container text3">借物申请审核</view>
    <view class="arrow-container">
      <image class="arrow-image" src="/images/base_management_work_page/icon_arrow_chevron-right_black.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 第4个容器：场地申请审核 -->
  <view class="button-container btn4" bindtap="navigate4" wx:if="{{level >= 1}}">
    <view class="left-image-container">
      <image class="left-image" src="/images/base_management_work_page/4.svg" mode="aspectFit"></image>
    </view>
    <view class="text-container text4">场地申请审核</view>
    <view class="arrow-container">
      <image class="arrow-image" src="/images/base_management_work_page/icon_arrow_chevron-right_white.svg" mode="aspectFit"></image>
    </view>
  </view>
</view>

<!-- 在container外添加底部图片容器 -->
<view class="bottom-image-container">
  <image class="bottom-image" src="/images/pubulicity_work_page/cat.svg" mode="widthFix"></image>
</view>