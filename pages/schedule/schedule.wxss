.container {/*页面的整体*/
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  width: 100vw;
  background-color: #222831;
  position: relative;
}

.table {/*表格整体*/
  border-radius: 15px;
  width: 605rpx;
  height: 865rpx;
  overflow: hidden;
  position: relative;
  top:-168.24rpx;
  background-color: #fff;
}

.table-header, .table-row {
  display: flex;
  justify-content: space-between;
}

.table-header {/*表格的表头*/
  font-size: 28rpx;
  background-color: #00adb5;
  color: white;
  display: flex;
  justify-content: flex-start;
}

.table-cell-header {/*表头的每个单元格*/
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-right: 2px dotted #ccc;
  border-bottom: 2px dotted #ccc;
  width:201.67rpx;
  height: 73.25rpx;
}

.table-cell-header:last-child {
  border-right:0 ;
}

.table-cell {/*表格主体的每个单元格*/
  flex: 1;
  text-align: center;
  line-height: 64.39rpx;
  border-right: 2px dotted #ccc;
  border-bottom: 2px dotted #ccc;
  width:210.22rpx;
  height: 62rpx;
}

.table-cell:last-child {/*最后一个单元格*/
  border-right: none;
}


.table-row:nth-child(even) {/*对偶数单元格*/
  background-color: #f9f9f9;
}

