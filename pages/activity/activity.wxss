/* pages/activity/activity.wxss */
.container {
  display: flex;
  flex-direction: column;
  background: #222831;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 0;
  justify-content: space-between; 
  position: relative;
}

/* 表单容器 */
.form-container {
  flex:1;
  background: #fff;
  border-radius: 35rpx;
  padding: 40rpx;
  margin-top: 30rpx;
  width: 95%;
}

.form-header {
  font-size: 36rpx;
  color: #00ADB5;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 表单项通用样式 */
.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  color: #00ADB5;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}

/* 文本域特殊处理 */
.textarea {
  height: 160rpx !important;
  padding: 20rpx;
  line-height: 1.4;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border: 2rpx solid #E0E0E0;
  border-radius: 24.5rpx;
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 上传区域 */
.upload-box {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #F5F5F5;
  border: 2rpx dashed #00ADB5;
  border-radius: 24.5rpx;
  flex-direction: row;
  justify-content: center;
}

.upload-box text {
  margin-left: 20rpx;
  color: #666;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  
}

/* 时间选择器 */
.time-picker-group .form-label{
  margin: 40rpx 0;
  border-radius: 24.5rpx;
}

.picker-row {
  display: flex;
  gap: 20rpx;
  margin: 20rpx 0;
}

.date-picker, .time-picker {
  flex: 1;
  height: 80rpx;
  background: #F5F5F5;
  border-radius: 24.5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 至 的样式特殊处理 */
.time-picker-group:nth-child(2) .form-label {
  color: #666;
  font-weight: normal;
}

/* 提交按钮 */
.submit-btn {
  flex:2;
  background: #00ADB5;
  color: #fff;
  border-radius: 50rpx;
  margin: 60rpx auto;
  width: 70%;
  height: 90rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}

/* 底部装饰图 */
.bottom-image {
  width: 440rpx;
  height: 174rpx;
  /* position: absolute; */
  /* bottom: 0; */
  margin: 60rpx 0 0 0;
  left: 50%;
  display: block;
  /* transform: translateX(-50%); */
  z-index: 99;
}
