/* components/auth-modal/auth-modal.wxss */
/* 蒙层样式 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

/* 弹窗容器 */
.modal-container {
  position: relative;
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.modal-icon {
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto 30rpx;
}

.modal-content {
  text-align: center;
  margin-bottom: 50rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  transition: opacity 0.3s;
}

.cancel {
  background: #f0f0f0;
  color: #666;
}

.confirm {
  background: #00adb5;
  color: #fff;
}

.btn-hover {
  opacity: 0.8;
}
